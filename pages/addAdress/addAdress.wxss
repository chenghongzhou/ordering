/* pages/release/release.wxss */

.add-adress {
  width:100%;
  padding: 0 20rpx;
  height:auto;
    background: #fff;
    box-sizing: border-box;
}

.add-adress .items {
  height: 100rpx;
  border-bottom: 1px solid #e5e5e5;
  line-height: 100rpx;
  overflow: hidden;
  position: relative;
  display: flex;
}
.add-adress .items:last-child{
  border: 0;
}

.add-adress .items view:nth-child(1) {
  flex: 1;
  height: 100%;
}

.add-adress .items view:nth-child(2) {
  flex: 3;
  height: 100rpx;
}

.add-adress .items .gg {
  position: absolute;
  right: 0px;
  top: 0rpx;
  font-size: 32rpx;
  color: #999;
}

.add-adress .items view:nth-child(3) {
  flex: 0.2;
  color: #c7c7cc;
  height: 100rpx;
}

.add-adress .items input {
  height: 100rpx;
  margin-left: 20rpx;
}

.add-adress .items .title {
  font-size: 32rpx;
  color: #333;
}

.picker {
  font-size: 32rpx;
  color: #999;
  height: 100rpx;
  margin-left: 20rpx;
}

.picker span{
  display: block;
  width: 100%;
  height: 100rpx;
}
input{
  font-size:32rpx;
}

.release-btn {
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  color: #fff;
  background-image: radial-gradient(100% 100%, #ff4d2e 0%, #ff4d2e 79%);
  border-radius: 4px;
}
page{
  background:#eee;
}

.radio{
  font-size: 32rpx;
}
.ad-btn-submit{
  background:none;
  margin-top:40rpx;
}